<%- model_class = SpotifyAccount -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @spotify_accounts.each do |spotify_account| %>
      <tr>
        <td><%= link_to spotify_account.id, spotify_account_path(spotify_account) %></td>
        <td><%=l spotify_account.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_spotify_account_path(spotify_account), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      spotify_account_path(spotify_account),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'Sign in with Spotify', '/auth/spotify' %>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_spotify_account_path,
            :class => 'btn btn-primary' %>
